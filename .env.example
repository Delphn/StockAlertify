# General Environment
NODE_ENV=<environment>

# Kafka Configuration
KAFKA_BROKER_ID=<broker_id>
KAFKA_ZOOKEEPER_CONNECT=<zookeeper_host>:<port>
KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://<kafka_host>:<port>
KAFKA_LISTENERS=PLAINTEXT://<port>
ALLOW_ANONYMOUS_LOGIN=<yes/no>
ALLOW_PLAINTEXT_LISTENER=<yes/no>

# Kafka Topics
KAFKA_TOPIC=<topic_name>
KAFKA_NOTIFICATIONS_TOPIC=<notifications_topic_name>

# Application Ports
NESTJS_PRODUCER_PORT=<port>
NESTJS_CONSUMER_PORT=<port>
VUE_PORT=<port>

# Kafka Client Configuration
KAFKA_CLIENT_ID=<client_id>
KAFKA_BROKERS=<kafka_host>:<port>
KAFKA_CONSUMER_GROUP=<consumer_group_id>
KAFKA_AUTO_TOPIC_CREATION=<true/false>